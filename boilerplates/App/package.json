{
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development BABEL_ENV=development node ./scripts/cli-start.js",
    "format": "yarn run format:js && yarn run format:css",
    "format:js": "eslint --fix --color ./src/**/*.js ./src/**/*.jsx",
    "format:css": "stylelint --fix --color ./src/**/*.scss",
    "build": "yarn run build:es && yarn run build:commonjs && yarn run build:webpack",
    "build:es": "cross-env NODE_ENV=production BABEL_ENV=es babel ./src --out-dir ./es",
    "build:commonjs": "cross-env NODE_ENV=production babel ./src --out-dir ./commonjs",
    "build:webpack": "webpack --config './webpack.prod.js' --color",
    "dashboard": "webpack-dashboard -p 8081 -c",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn run format",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chalk": "^2.4.1",
    "commander": "^2.15.1",
    "cross-env": "^5.1.5",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.1",
    "execa": "^0.10.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "prettier": "1.12.1",
    "sass-loader": "^7.0.1",
    "shelljs": "^0.8.2",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "stylelint-config-recess-order": "^2.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.2",
    "webpack-cli": "^2.1.3",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "redux": "^4.0.0",
    "redux-saga": "^0.16.0",
    "styled-components": "^3.2.6"
  }
}
